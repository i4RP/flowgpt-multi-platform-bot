# FlowGPT Multi-Platform Bot Configuration
# Copy this file to .env and fill in your values

# ===================
# OpenAI Configuration
# ===================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# ===================
# FlowGPT Configuration
# ===================
# Optional: Default prompt ID from FlowGPT
FLOWGPT_DEFAULT_PROMPT_ID=
# Default system prompt if no FlowGPT prompt is loaded
FLOWGPT_DEFAULT_SYSTEM_PROMPT=You are a helpful AI assistant.

# ===================
# Telegram Bot
# ===================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Optional: Webhook URL for production deployment
TELEGRAM_WEBHOOK_URL=

# ===================
# Discord Bot
# ===================
# Get your bot token from Discord Developer Portal
# https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_APPLICATION_ID=your_discord_application_id_here

# ===================
# Slack Bot
# ===================
# Get these from your Slack App settings
# https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret
# Socket Mode App Token (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-slack-app-token

# ===================
# LINE Bot
# ===================
# Get these from LINE Developers Console
# https://developers.line.biz/console/
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token

# ===================
# Server Configuration
# ===================
HOST=0.0.0.0
PORT=8000
DEBUG=false
